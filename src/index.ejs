        [375, 667, 2, 'portrait'],
        [414, 896, 2, 'portrait'],
        [375, 812, 3, 'portrait'],
        [414, 736, 3, 'portrait'],
        [414, 896, 3, 'portrait'],
        [768, 1024, 2, 'portrait'],
        [834, 1112, 2, 'portrait'],
        [834, 1194, 2, 'portrait'],
        [1024, 1366, 2, 'portrait'],
        [810, 1080, 2, 'portrait'],
        [320, 568, 2, 'landscape'],
        [375, 667, 2, 'landscape'],
        [414, 896, 2, 'landscape'],
        [375, 812, 3, 'landscape'],
        [414, 736, 3, 'landscape'],
        [414, 896, 3, 'landscape'],
