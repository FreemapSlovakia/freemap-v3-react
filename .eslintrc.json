{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "impliedStrict": true,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "array-bracket-spacing": [ "warn", "always" ],
    "semi": [ "warn", "always" ],
    "space-before-blocks": "warn",
    "keyword-spacing": "warn",
    "curly": "warn"
  },
  "globals": {
    "L": true
  }
}
